{% extends "admin/base_site.html" %}

{% block extrahead %}
<script src="/static/js/hipercicUtilities.js" type="text/javascript"> </script>
<script type="text/javascript">
  <!-- I am an empty script!!! -->
</script>

{% endblock %}

{% block content %}
<h1>Inactive Bug Reports</h1>
<br>

{% if not user_is_admin %} 
<br><br>
You do not have permission to view inactive bugs!

{% else %} {# not user_is_admin #}
{# assert -- the user is an admin, and has permission to view these #}

<br><br>
All inactive bugs are listed in this table.  Set the "active" flag on each bug's page to reactivate it.<br>
<table>
  <tr>
    <th> id </th>
    <th> Date Updated </th>
    <th> Status </th>
    <th> Summary </th>
    <th> Date Submitted </th>
    <th> Version </th>  
  </tr>
{# generate the rows in the table #}
{% for bug in allBugs %}
  <tr>
    <td> {{bug.id}} </td>
    <td> {{bug.dateModified}} </td>
    <td align="center"> {{bug.status}} </td>
    <td> <a href="bug?id={{bug.id}}">{{bug.summary}} </a></td>
    <td> {{bug.dateSubmitted}} </td>
    <td> {{bug.hipercicVersion}} </td>
 
  </tr>

{% empty %} {# if the table is empty #}
</table><i>There are no bugs to display</i><br>
{% endfor %}

</table>


<br><br>

</form>



<br><br><br>Console Output:<input type="text" id="consoleOutputBox" value="" readonly="readonly" size="50" />
{% endblock %} {# block content #}
